@model IEnumerable<Blog.Domain.Entities.Article>;

@{
    ViewData["Title"] = "Blogovi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" href="#">@User.Identity.Name</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="CreateArticle">Creat Article</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="Logout">Logout</a>
                </span>
            </div>
        </nav>
    </header>
    @foreach (var item in Model)
    {
<div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
        <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
    </div>
    <div class="card-footer bg-transparent border-success">
        @Html.ActionLink("Edit", "Edit", new {id=item.Id}) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.Id})
    </div>
</div>
            }
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>